
<div class="col-md-6"></div>

   <h2>Here are your lists:</h2>
    <% if @lists == nil %>
      <h4> None </h4>
    <% end %>
    <table>
      <% @lists.each do |list| %>
        <tr>
          <td>
            <a href="/lists/tasks/<%= list.id %>" class="list"> <%= list.name %></a>
            <a href="/list/<%= list.id %>"
              data-method="delete"
              rel="nofollow">
              <span class="glyphicon glyphicon-remove" id="delete">  </span>
            </a>
          </td>
        </tr>
      <% end %>
    </table>

  <form role="form" action="/lists" method="post" class="forms">
    <div class="form-group">
      <label name="new_list">New List:</label>
      <input id="new_list" name="name" type="text" class="form-control">
    </div>
    <button class="btn btn-primary">Create!</button>
  </form>


<% if @list.persisted? %>
  <h4 class="error" id="green"> List Saved! </h4>
<% elsif @list.errors.any? %>
  <h4 class="error" id="red"> <%= @list.errors.full_messages.each {|message| puts message } %> </h4>
<% end %>

</div>
